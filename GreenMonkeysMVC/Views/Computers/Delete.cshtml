@model GreenMonkeysMVC.Models.Computer

@{
    ViewData["Title"] = "Delete";
}
<h1>Delete</h1>

@if (ViewBag.Employee == null)
{
    <div class="alert alert-danger">Are you sure you want to delete this?</div>
}
else
{
    <div class="alert alert-info">This Computer is assigned to @ViewBag.Employee.FirstName @ViewBag.Employee.LastName !!</div>
}

@*<h3>Are you sure you want to delete this?</h3>*@

<div>
    <h4>Computer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Make)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
    </dl>

    <form asp-action="Delete">
        @if (ViewBag.Employee == null)
        {
            <input type="submit" value="Delete" class="btn btn-danger" />
        }
        |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
