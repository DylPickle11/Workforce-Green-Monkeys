@model GreenMonkeysMVC.Models.ViewModels.EmployeeCreateModel


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Employee.Id" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label"></label>
                <input asp-for="Employee.FirstName" class="form-control" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.DepartmentId" class="control-label"></label>
                @*<input asp-for="DepartmentId" class="form-control" />*@
                <select asp-for="Employee.DepartmentId" asp-items="@Model.Departments"></select>
                @*<span asp-validation-for="DepartmentId" class="text-danger"></span>*@
            </div>
            <input type="checkbox" asp-for="Employee.IsSupervisor" class="form-control" />
            <div class="form-group">
                <label asp-for="Employee.Email" class="control-label"></label>
                <input asp-for="Employee.Email" class="form-control" />
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.ComputerId" class="control-label"></label>
                @*<input asp-for="Employee.ComputerId" class="form-control" />*@
                <select asp-for="Employee.ComputerId" asp-items="@Model.Computers"></select>
                @*<span asp-validation-for="Employee.ComputerId" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
